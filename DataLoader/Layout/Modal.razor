@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public EventCallback<bool> IsVisibleChanged { get; set; }

    [Parameter] public string Username { get; set; } // The selected username
    [Parameter] public EventCallback<(string Username, string NewPassword)> OnPasswordChange { get; set; }

    private string newPassword = "";

    private async Task CloseModal()
    {
        IsVisible = false;
        await IsVisibleChanged.InvokeAsync(IsVisible);
    }

    private async Task SavePassword()
    {
        if (!string.IsNullOrWhiteSpace(newPassword))
        {
            await OnPasswordChange.InvokeAsync((Username, newPassword));
            await CloseModal();
        }
    }
}

<div class="modal-overlay" style="display: @(IsVisible ? "flex" : "none")">
    <div class="modal">
        <div class="modal-header">
            <h2>Change Password for @Username</h2>
            <span class="close" @onclick="CloseModal">&times;</span>
        </div>
        <div class="modal-body">
            <input type="password" @bind="newPassword" placeholder="Enter new password" class="modal-input" />
        </div>
        <div class="modal-footer">
            <button class="cancel-btn" @onclick="CloseModal">Cancel</button>
            <button class="save-btn" @onclick="SavePassword">Save</button>
        </div>
    </div>
</div>

<style>
    .modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.5);
        display: none;
        align-items: center;
        justify-content: center;
        z-index: 1000;
    }

    .modal {
        background-color: white;
        border-radius: 8px;
        width: 100%;
        max-width: 400px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .modal-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .close {
        font-size: 1.5rem;
        color: #333;
        cursor: pointer;
    }

    .modal-body {
        margin-top: 10px;
        text-align: center;
    }

    .modal-input {
        width: 100%;
        padding: 10px;
        font-size: 1rem;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .modal-footer {
        margin-top: 20px;
        display: flex;
        justify-content: flex-end;
        gap: 10px;
    }

    .cancel-btn {
        background-color: #f44336;
        color: white;
    }

    .save-btn {
        background-color: #4caf50;
