@page "/modal-example"

<Modal IsVisible="@showModal" IsVisibleChanged="@OnModalVisibilityChanged" OnSave="HandleSave" />

<button @onclick="OpenModal">Open Modal</button>

<p>Saved value: @savedValue</p>

@code {
    private bool showModal;
    private string savedValue;

    private void OpenModal()
    {
        showModal = true;
    }

    private void OnModalVisibilityChanged(bool isVisible)
    {
        showModal = isVisible;
    }

    private void HandleSave(string value)
    {
        savedValue = value;
    }
}
